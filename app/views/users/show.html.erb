<% provide(:title, @user.username) %>
<p id="notice"><%= notice %></p>

<p>
  <strong>Username:</strong>
  <%= @user.username %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<% if is_admin? %>
  <p>
    <strong>Admin:</strong>
    <%= @user.admin %>
  </p>
<% end %>

<% if current_user?(@user) %>
  <%= link_to 'Edit', edit_user_path(@user) %> |
<% end %>

<%= link_to 'Back', users_path %>
