<%= form_for(@user) do |f| %>

  <%= render partial: "shared/error_messages", locals: { obj: @user } %>

  <% if !@user.new_record? %>
    <%= hidden_field_tag :old_username, @user.username %>
  <% end %>

  <%= f.label :username %>
  <%= f.text_field :username, class: "field" %>

  <%= f.label :email %>
  <%= f.email_field :email, class: "field" %>

  <%= f.label :password %>
  <%= f.password_field :password, class: "field" %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, class: "field" %>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
