<% provide(:title, 'Reset password') %>
<h1>Reset password</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url: password_reset_path(params[:id])) do |f| %>
      <%= render partial: 'shared/error_messages', locals: { obj: @user } %>

      <%= hidden_field_tag :email, @user.email %>

      <div class="form-group">
        <%= f.label :password, for: "password" %>
        <%= f.password_field :password, class: 'form-control', id: "password" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "Confirmation", for: "confirm" %>
        <%= f.password_field :password_confirmation, class: 'form-control', id: "confirm" %>
      </div>

      <%= f.submit "Update password", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
