<% provide(:title, "Log in") %>
<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <div class="form-group">
        <%= f.label :email, for: "email" %>
        <%= f.email_field :email, class: "form-control", id: "email", type: "email",
          placeholder: "Enter email"%>
      </div>

      <div class="form-group">
        <%= f.label :password, for: "password" %>
        <%= link_to "forgot password?", new_password_reset_path %>
        <%= f.password_field :password, class: "form-control", id: "password",
          type: "password", placeholder: "Password" %>
      </div>

      <div class="form-check">
        <%= f.check_box :remember_me, class: "form-check-input", id: "remember-me-input" %>
        <label class="form-check-label text-muted" for="remember-me-input">
          Remember me on this device.
        </label>
      </div>

      <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>

    <div class="info-label">New user? <%= link_to "Sign up now!", signup_path %></div>
  </div>
</div>
